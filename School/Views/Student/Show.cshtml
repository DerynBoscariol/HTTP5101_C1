@model School.Models.Student
@{
    ViewBag.Title = "Show";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Show Student</title>
</head>
<body>
    <h2>@Model.FirstName @Model.LastName</h2>
    <div class="show-info">
        <p>Student Id: @Model.StudentId</p>
        <p>Enrolled: @Model.EnrollDate</p>
        <p>Student Number: @Model.StudentNumber</p>
    </div>
    <a href="/Student/List"> &#8592; Back to all students</a>

</body>
</html>